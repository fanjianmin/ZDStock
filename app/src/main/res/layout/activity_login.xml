<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.rjzd.aistock.ui.activity.LoginActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/login_close" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="@string/cellphone"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_15" />

            <com.rjzd.aistock.ui.views.ClearEditText
                android:id="@+id/cet_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/black"
                android:textColorHint="@color/cl_999999"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_size_15" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="@color/cl_e6e6e6"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="@string/code"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_15" />

            <EditText
                android:id="@+id/et_auth_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入四位验证码"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="@color/black"
                android:textColorHint="@color/cl_999999"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_size_15" />

            <TextView
                android:id="@+id/send_code"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:background="@drawable/login_code"
                android:gravity="center"
                android:text="@string/send_code"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_10" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="@color/cl_e6e6e6"></View>

        <Button
            android:id="@+id/login_bt"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/login_shape"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="10dp">


            <CheckBox
                android:id="@+id/cb_master_swatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checked="true"
                android:button="@drawable/selector_cb_user_agree"
                android:padding="5dp"
                android:text="@string/agree"
                android:textColor="@color/cl_999999"
                android:textSize="@dimen/font_size_10" />


            <TextView
                android:id="@+id/tv_user_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deal"
                android:textColor="@color/cl_508ff7"
                android:textSize="@dimen/font_size_10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center_vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="0.25dp"
                android:layout_weight="1"
                android:background="@color/black"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="第三方登录"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_12" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.25dp"
                android:layout_weight="1"
                android:background="@color/black"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/login_weibo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/sina_login_logo" />

            <ImageView
                android:id="@+id/login_weixin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/weixin_login_logo" />

            <ImageView
                android:id="@+id/login_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/qq_login_logo" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
