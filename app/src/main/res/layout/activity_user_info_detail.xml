<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cl_background_new"
    >

    <com.rjzd.aistock.ui.views.ToolbarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:actionLeftBackground="@drawable/image_back"
        app:titleText = "@string/user_info"
        >
    </com.rjzd.aistock.ui.views.ToolbarView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mine_item_height"
            android:gravity="center"
            style="@style/base_item_text_style"
            android:text="@string/avatar"
            />

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/iv_next"
            android:background="@drawable/ic_avatar_default"
            />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:src="@drawable/spread"
            />

        <View
            android:id="@+id/divider_avatar"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/iv_avatar"
            android:background="@color/cl_e6e6e6"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mine_item_height"
            android:layout_below="@+id/divider_avatar"
            android:gravity="center"
            style="@style/base_item_text_style"
            android:text="@string/nickname"
            />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mine_item_height"
            android:layout_below="@+id/divider_avatar"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/cl_888888"
            android:textSize="@dimen/font_size_12"
            tools:text="日狗了"
            android:drawableRight="@drawable/spread"
            android:drawablePadding="10dp"
            />

        <View
            android:id="@+id/divider_nickname"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/tv_nickname"
            android:background="@color/cl_e6e6e6"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mine_item_height"
            android:layout_below="@+id/divider_nickname"
            android:gravity="center"
            style="@style/base_item_text_style"
            android:text="@string/cellphone"
            />

        <TextView
            android:id="@+id/tv_cellphone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mine_item_height"
            android:layout_below="@+id/divider_nickname"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/cl_888888"
            android:textSize="@dimen/font_size_12"
            tools:text="185****9632"
            android:drawableRight="@drawable/spread"
            android:drawablePadding="10dp"
            />
    </RelativeLayout>

    <!-- 性别 区域-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mine_item_height"
            android:gravity="center"
            style="@style/base_item_text_style"
            android:text="@string/gender"
            />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mine_item_height"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/cl_888888"
            android:textSize="@dimen/font_size_12"
            android:text="保密"
            android:drawableRight="@drawable/spread"
            android:drawablePadding="10dp"
            />

        <View
            android:id="@+id/divider_gender"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/tv_gender"
            android:background="@color/cl_e6e6e6"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mine_item_height"
            android:layout_below="@+id/divider_gender"
            android:gravity="center"
            style="@style/base_item_text_style"
            android:text="@string/area"
            />

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mine_item_height"
            android:layout_below="@+id/divider_gender"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/cl_888888"
            android:textSize="@dimen/font_size_12"
            android:text="未知"
            android:drawableRight="@drawable/spread"
            android:drawablePadding="10dp"
            />
    </RelativeLayout>


</LinearLayout>
