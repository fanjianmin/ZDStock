<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/line_index_tab_height">

    <android.support.design.widget.TabLayout
        android:id="@+id/cfb_index_tab"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/line_index_tab_height"
        android:layout_weight="1"
        app:tabIndicatorColor="@color/cl_d63535"
        app:tabMaxWidth="50dp"
        app:tabMode="scrollable"
        app:tabTextAppearance="@style/chart_bottom_tab_text_size"
        app:tabSelectedTextColor="@color/cl_d63535"
        app:tabTextColor="@color/cl_333333" />


</RelativeLayout>