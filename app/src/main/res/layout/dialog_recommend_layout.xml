<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_dialog_factor_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recommend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="标题"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/cl_d63535"
        android:textSize="@dimen/font_size_16"
        />

    <ImageView
        android:id="@+id/iv_recommend_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_dialog_factor"
        android:layout_gravity="left|top"
        android:padding="18dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:paddingLeft="15dp"
        android:scrollbars="none"
        android:overScrollMode="never"
        >

        <LinearLayout
            android:id="@+id/ll_according"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

</FrameLayout>
