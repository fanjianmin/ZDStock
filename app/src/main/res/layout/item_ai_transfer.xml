<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingLeft="10dp"
    android:background="@drawable/selector_item_selected"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">


        <ImageView
            android:id="@+id/iv_action"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="11:00"
            android:textColor="@color/cl_999999"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/font_size_9" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="柳钢股份"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="601003"
            android:textColor="@color/cl_888888"
            android:textSize="@dimen/font_size_10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_deal_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1.25成交"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_position_percentage_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="0%->20%"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/font_size_9" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_profit_loss"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="12.45%"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/font_size_14"
        />

    <TextView
        android:id="@+id/tv_transfer_strategy"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="@string/transfer_strategy"
        android:textSize="@dimen/font_size_11"
        android:textColor="@color/cl_1e82d2"
        android:background="@drawable/shape_blue_bg"
        />

</LinearLayout>
