<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingStart="15dp"
    android:paddingEnd="10dp"
    android:orientation="vertical"
    android:background="@drawable/selector_item_selected"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stock_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/cl_333333"
                tools:text="@string/stock_code"
                />

            <TextView
                android:id="@+id/stock_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:paddingTop="5dp"
                android:textSize="@dimen/font_size_10"
                android:textColor="@color/cl_999999"
                tools:text="@string/stock_code"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_gravity="center_vertical"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/font_size_15"
            tools:text="12.29"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/fluctuation_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/cl_119d3e"
            android:textSize="@dimen/font_size_15"
            tools:text="+%0.62"
            android:textStyle="bold"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/cl_e6e6e6"
        />
</LinearLayout>