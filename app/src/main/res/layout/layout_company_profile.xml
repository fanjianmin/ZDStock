<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="@string/basic_info"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/font_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/cl_e6e6e6"/>
    <LinearLayout
        android:id="@+id/basic_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="18dp"
        android:background="@color/cl_e6e6e6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/executive"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/font_size_15" />
   <!--     <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2016-5-23"
            android:textColor="@color/cl_999999"
            android:textSize="@dimen/font_size_13"
            android:gravity="right"/>-->
    </LinearLayout>


    <include layout="@layout/layout_executive_item"/>

    <LinearLayout
        android:id="@+id/executive_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="18dp"
        android:background="@color/cl_e6e6e6">
    </View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/dividends"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/font_size_15" />
    <!--    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2016-5-23"
            android:textColor="@color/cl_999999"
            android:textSize="@dimen/font_size_13"
            android:gravity="right"/>-->
    </LinearLayout>
    <include
        layout="@layout/layout_dividends_item">
    </include>

    <LinearLayout
        android:id="@+id/dividends_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
    </LinearLayout>

</LinearLayout>
