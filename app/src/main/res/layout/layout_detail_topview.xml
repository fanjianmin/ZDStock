<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/stock_abstract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/current_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/cl_333333"
                        android:textSize="@dimen/font_size_28"
                        tools:text="——" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/floating_prices"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textColor="@color/cl_333333"
                            android:textSize="@dimen/font_size_15"
                            tools:text="——" />
                        <TextView
                            android:id="@+id/floating_range"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/cl_333333"
                            android:layout_marginStart="5dp"
                            android:textSize="@dimen/font_size_15"
                            tools:text="——" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="8dp"
               android:layout_weight="1"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:layout_gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="@string/high"
                            android:textColor="@color/cl_333333"
                            android:textSize="@dimen/font_size_14" />

                        <TextView
                            android:id="@+id/tv_stock_high"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="——"
                            android:textColor="@color/cl_333333"
                            android:textSize="@dimen/font_size_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="@string/open"
                            android:textColor="@color/cl_333333"
                            android:textSize="@dimen/font_size_14" />

                        <TextView
                            android:id="@+id/details_opening_price"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/cl_333333"
                            android:textSize="@dimen/font_size_14"
                            tools:text="——" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="@string/turnover"
                            android:textColor="@color/cl_333333"
                            android:textSize="@dimen/font_size_14" />

                        <TextView
                            android:id="@+id/dateils_count"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/cl_333333"
                            android:textSize="@dimen/font_size_14"
                            tools:text="——" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="@string/low"
                            android:textColor="@color/cl_333333"
                            android:textSize="@dimen/font_size_14" />

                        <TextView
                            android:id="@+id/tv_stock_low"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="——"
                            android:textColor="@color/cl_333333"
                            android:textSize="@dimen/font_size_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="@string/prevClose"
                            android:textColor="@color/cl_333333"
                            android:textSize="@dimen/font_size_14" />

                        <TextView
                            android:id="@+id/dateils_prec"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/cl_333333"
                            android:textSize="@dimen/font_size_14"
                            tools:text="——" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="@string/per"
                            android:textColor="@color/cl_333333"
                            android:textSize="@dimen/font_size_14" />

                        <TextView
                            android:id="@+id/tv_stock_pe"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="——"
                            android:textColor="@color/cl_333333"
                            android:textSize="@dimen/font_size_14" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/detail_unfold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/layout_ktab_title" />

                <!-- 分时图/K线图view -->
                <LinearLayout
                    android:id="@+id/kline_container"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" />
            </LinearLayout>

            <ViewStub
                android:id="@+id/stubView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout="@layout/layout_stock_detail_extend" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>