<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_dialog_update_version"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/font_size_20"
        android:textColor="@color/cl_333333"
        android:text="@string/new_version"
        />

    <TextView
        android:id="@+id/tv_version_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="V1.0.1"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_10"
        android:background="@drawable/login_code"
        />

    <TextView
        android:id="@+id/tv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="45dp"
        android:lineSpacingExtra="8dp"
        android:textSize="@dimen/font_size_16"
        android:textColor="@color/cl_f95555"
        android:text="新版特性"
        />

    <TextView
        android:id="@+id/tv_update_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="8dp"
        android:textSize="@dimen/font_size_12"
        android:textColor="@color/c1_666666"
        android:text="1、优化界面显示，提升用户体验\n 2、修复部分已知bug \n 3、更新界面显示效果"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="20dp"


        >

        <Button
            android:id="@+id/btn_update_ignore"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:text="@string/update_ignore"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/c1_666666"
            android:background="@drawable/cancel_shape"
            android:layout_alignParentBottom="true"
             />

        <Button
            android:id="@+id/btn_update_now"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:text="@string/update_now"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14"
            android:background="@drawable/login_shape"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>