    <RelativeLayout
        style="@style/chart_tab_style"


        >

        <TextView
            android:id="@+id/prediction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/prediction"
            android:textColor="@color/cl_d63535"
            android:textSize="@dimen/font_size_13" />

        <View
            android:id="@+id/prediction_idc"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/cl_d63535"
            />
    </RelativeLayout>
    <RelativeLayout
        style="@style/chart_tab_style"

        >

        <TextView
            android:id="@+id/tv_riseCrunchies"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/riseCrunchies"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/font_size_13" />

        <View
            android:id="@+id/riseCrunchies_idc"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/cl_d63535"
            android:visibility="gone"/>
    </RelativeLayout>
    <RelativeLayout
        style="@style/chart_tab_style"
       >

        <TextView
            android:id="@+id/tv_fallCrunchies"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:drawablePadding="6dp"
            android:text="@string/fallCrunchies"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/font_size_13" />

        <View
            android:id="@+id/fallCrunchies_idc"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/cl_d63535"
            android:visibility="gone"/>
    </RelativeLayout>
