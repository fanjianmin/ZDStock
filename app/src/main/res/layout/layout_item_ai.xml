    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_add_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@drawable/shape_red_bg"
            android:drawableLeft="@drawable/star_press"
            android:drawablePadding="5dp"
            android:text="关注"
            android:textColor="@color/cl_d63535"
            android:textSize="@dimen/font_size_12"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/online_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_add_attention"
            android:layout_marginTop="5dp"
            android:text="上线时间：2016-3-10"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/font_size_11" />

        <TextView
            android:id="@+id/title_special"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/online_date"
            android:layout_marginTop="10dp"
            android:text="操作特点："
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/font_size_11" />

        <TextView
            android:id="@+id/tv_chara_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/online_date"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/title_special"
            android:text="短线操作    收益稳定    准确率高"
            android:textColor="@color/cl_d63535"
            android:textSize="@dimen/font_size_11" />

        <TextView
            android:id="@+id/tv_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_special"
            android:layout_marginBottom="15dp"
            android:paddingTop="13dp"
            tools:text="沪指跌近1%，险守3100点，了解自己的理财基因，理财才有的放矢，我们才能更懂你，两市热潮高温不退，期望沪指跌近1%，险守3100点，了解自己的理财基因，理财才有的放矢，我们才能更懂你，两市热潮高温不退，期望"
            android:textSize="@dimen/font_size_11"
            android:textColor="@color/cl_333333" />
    </RelativeLayout>

