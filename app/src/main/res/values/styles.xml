<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 主要解决启动页展示过程中出现黑屏或者是白屏现象 -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/start_splash</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/transparent</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 底栏Style-->
    <style name="TabPanelStyle">
        <item name="imageSize">@dimen/tab_icon_image_size</item>
        <item name="textSize">@dimen/tab_text_size</item>
        <item name="iconTextMargin">@dimen/tab_icon_text_margin</item>
        <item name="textColorDefault">@color/cl_888888</item>
        <item name="textColorPressed">@color/cl_d63535</item>
        <item name="backgroundDefault">@drawable/tab_icon_background_default</item>
        <item name="iconPaddingHorizontal">@dimen/tab_padding_horizontal</item>
        <item name="iconPaddingVertical">@dimen/tab_padding_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <style name="TabPanelStyle.NoPressEffect">
        <item name="pressEffect">false</item>
        <item name="backgroundSelector">@null</item>
        <item name="iconLogoSelector">@null</item>
        <item name="textColorSelector">@null</item>
    </style>
    <style name="TabPanelStyle.NoPressEffect.AI">
        <item name="text">@string/ai</item>
        <item name="android:gravity">center</item>
        <item name="iconLogoDefault">@drawable/ai_icon_default</item>
        <item name="iconLogoPressed">@drawable/ai_icon_press</item>
    </style>
    <style name="TabPanelStyle.NoPressEffect.Markets">
        <item name="text">@string/markets</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="iconLogoDefault">@drawable/markets_icon_default</item>
        <item name="iconLogoPressed">@drawable/markets_icon_press</item>
    </style>
    <style name="TabPanelStyle.NoPressEffect.Zixuan">
        <item name="text">@string/portfolio</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="iconLogoDefault">@drawable/portfolio_icon_default</item>
        <item name="iconLogoPressed">@drawable/portfolio_icon_press</item>
    </style>


<!--股票图表-->
    <style name="line_radio_btn_bottom">
        <item name="android:background">@drawable/line_main_radio_btn_bg</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#858585 </item>
    </style>
    <style name="chart_bottom_tab_text_size" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">8dp</item>
        <item name="android:textColor">@color/default_color</item>
    </style>
    <style name="chart_tab_style" >
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>


    </style>

    <style name="chart_tab_text_style" parent="chart_tab_style">
        <item name="android:textColor">@color/cl_333333</item>
        <item name="android:textSize">@dimen/font_size_13</item>
    </style>

    <!-- 自选股recycleViewTitle -->
    <style name="ZixuanRecycleTitleStyle">
        <item name="android:textColor">@color/cl_888888</item>
        <item name="android:textSize">@dimen/font_size_13</item>
    </style>


    <style name="condition_style">
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/cl_base_text</item>
        <item name="android:textSize">@dimen/font_size_13</item>
        <item name="android:background">@color/cl_background_panel</item>
        <item name="android:drawableRight">@drawable/ic_expand</item>
    </style>

    <!-- 个人中心 style -->
    <style name="base_item_text_style">
        <item name="android:textSize">@dimen/font_size_13</item>
        <item name="android:textColor">@color/stock_details_numcolor</item>
    </style>

    <style name="mine_item_style" parent="base_item_text_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawableRight">@drawable/spread</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
<!--登录微博style-->
    <style name="umeng_socialize_popup_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <!-- 大盘 行业 概念 radiobutton样式 -->
    <style name="round_radio_style">
        <item name="android:layout_weight">1.0</item>
        <item name="android:button">@null</item>
        <item name="android:drawableBottom">@drawable/selector_rb_round</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/selector_textcolor_radio</item>

    </style>

    <!--ai机器人收益-->
    <style name="ai_earnings_style">
        <item name="android:textColor">@color/cl_stock_code</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- AI预测弹出雷达因子dialog动画 -->
    <style name="predict_factor_dialog_anim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_window_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_window_out</item>
    </style>
    <style name="DarkAnimation">
        <item name="android:windowEnterAnimation">@anim/dark_fade_in</item>
        <item name="android:windowExitAnimation">@anim/dark_fade_out</item>
    </style>
</resources>
